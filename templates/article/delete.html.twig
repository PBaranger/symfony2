{% extends 'home.html.twig' %}
{% block title %}Liste des articles !
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>Confirmer la suppression</h1>

		<p>Êtes-vous sûr de vouloir supprimer l'article "{{ article.titre }}" ?</p>

		<form method="post" action="{{ path('delete_article_confirmed', {id: article.id}) }}">
			<button type="submit" class="btn btn-danger">Supprimer</button>
			<a href="{{ path('list_article') }}" class="btn btn-secondary">Annuler</a>
		</form>
	</div>

{% endblock %}
